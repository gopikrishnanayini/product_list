<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Listing users of a product</h1>
 <div class="col-lg-3 col-sm-6 col-xs-12 center-block " >
  <table class="col-lg-3 col-sm-6 col-xs-12 center-block">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address of user</th>
        <th>Quantity of product</th>
        <th>Name of product</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
      <td><%= user.name %></td>
      <td><%= user.address %></td>
      <td><%= user.quantity %></td>
      <td><%= user.product_name %></td>
      <td><%= link_to 'Show', product_user_path(@product, user) %></td>
      <td><%= link_to 'Edit', edit_product_user_path(@product, user) %></td>
      <td><%= link_to 'Destroy', product_user_path(@product, user), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      <td><%= link_to 'Product', products_path(@product) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
