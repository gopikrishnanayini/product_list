<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Listing categories</h1>
 <div class="col-lg-3 col-sm-6 col-xs-12 center-block " >
  <table class="col-lg-3 col-sm-6 col-xs-12 center-block">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
      <td><%= category.name %></td>
      <td><%= category.category_type %></td>
      <td><%= image_tag category.photo.url, height: "300", class: "img-responsive"  %></td>
      <td><%= link_to 'Show', category %></td>
      <td><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      <td><%= link_to 'Product', category_products_path(category) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<div>

<br>

<%= link_to 'New Category', new_category_path ,:class=>"btn btn-primary" %>
</div>